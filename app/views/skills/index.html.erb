<% breadcrumb :skills %>
<%= breadcrumbs %>

<h1><%= raw h1_title(@page_title) %></h1>

<div class="unit">
  <h2>ランクポイント</h2>
  <div class="subunit">
    <table class="skill_sum">
      <thead>
        <tr>
          <% @blocks.each_value do |data| %>
            <th><%= data[:title] %></th>
          <% end %>
          <th>合計RP</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% total_rp = 0.00 %>
          <% @blocks.each_value do |data| %>
            <td><%= sprintf_for_rp(data[:sum_rp]) %></td>
            <% total_rp = data[:sum_rp] %>
          <% end %>
          <td><%= sprintf_for_rp(total_rp) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<% @blocks.each_value do |block| %>
  <%= render 'block', block: block, edit: @edit %>
<% end %>
