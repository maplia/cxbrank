source 'https://rubygems.org'

# Ruby on Rails
gem 'rails', '4.2.0'

# Database for Active Record
gem 'sqlite3', group: [:development, :test]
gem 'mysql2', group: [:production, :staging]

# Asset pipeline
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

# Document generate
gem 'sdoc', require: false, group: [:doc]

# Timezone info on Windows
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw]

# Master maintenance
gem 'seed-fu'

# Breadcrumb navigation
gem 'gretel'

# Auto link
gem 'rails_autolink'

# User-agent parse
gem 'rack-user_agent'

# Excel Spreadsheet (.xlsx) generator/reader
gem 'axlsx_rails'
gem 'roo'
  